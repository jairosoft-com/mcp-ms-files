  "item": [
    {
      "name": "Download File",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"outputPath\": \"C:/Downloads\",\n    \"fileName\": \"custom_name.pdf\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/files/:fileId/download",
          "host": ["{{base_url}}"],
          "path": ["api", "files", ":fileId", "download"],
          "variable": [
            {
              "key": "fileId",
              "value": "01ABC123XYZ456DEF789GHIJKLMNOPQRST",
              "description": "The ID of the file to download"
            }
          ]
        },
        "description": "Download a file by its ID. The file will be saved to the specified outputPath with the given filename."
      },
      "response": [
        {
          "name": "Success Response (with outputPath)",
          "originalRequest": {
